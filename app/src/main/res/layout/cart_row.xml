<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_width="match_parent">

    <View
        android:background="#a9a9a9"
        android:id="@+id/view"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/crtphoto"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnquantity"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/crtname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="HI  fsnfnsfksfsfs fskfjsfjbsf fjksfksfbjff sbfkjsfksbfbksf jbjfbff"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/crtphoto"
        app:layout_constraintTop_toTopOf="@+id/crtphoto" />

    <TextView
        android:id="@+id/crtprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="15000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/crtphoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/crtphoto" />


    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/btnquantity"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        app:finalNumber="20"
        app:initialNumber="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/crtphoto" />

    <LinearLayout
        android:id="@+id/lin99"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnquantity">

        <Button
            android:background="@color/colorcyn"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Delete" />

        <Button
            android:background="@color/colorcyn"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Move To Wishlist"
            />

    </LinearLayout>

    <View
        android:background="#a9a9a9"
        android:id="@+id/view222"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lin99" />

</androidx.constraintlayout.widget.ConstraintLayout>

